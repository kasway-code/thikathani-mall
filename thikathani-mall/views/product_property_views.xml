<odoo>
    <data>
        <record id="product_property_form_view" model="ir.ui.view">
            <field name="name">product.property.form</field>
            <field name="model">product.property</field>
            <field name="arch" type="xml">
                <form class="oe_form_configuration">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Property name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Lamps"/></h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
